<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button android:id="@+id/bookaddscanbutton"
		android:layout_width="130dp" android:layout_height="100dp"
		android:layout_marginTop="20dp" android:layout_marginLeft="10dp"
		android:text="Scan product code" style="@style/black" />

	<Button android:id="@+id/bookaddsearchbutton"
		android:layout_width="130dp" android:layout_height="100dp"
		android:layout_marginTop="20dp" android:layout_marginLeft="10dp"
		android:text="Search the web" style="@style/black" />

	<Button android:id="@+id/bookaddformbutton"
		android:layout_width="130dp" android:layout_height="100dp"
		android:layout_marginTop="20dp" android:layout_marginLeft="10dp"
		android:text="Use form" style="@style/black" />

</LinearLayout>
