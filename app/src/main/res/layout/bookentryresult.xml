<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			
		<TextView android:id="@+id/bookentrytitle"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
			style="@style/whitetextbold" />
		<ImageView android:id="@+id/bookentrycover"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_marginTop="10dp"
			android:layout_below="@id/bookentrytitle" />
		<TextView android:id="@+id/bookentryauthors"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_marginTop="10dp" style="@style/whitetext"
			android:layout_below="@id/bookentrycover" />
		<TextView android:id="@+id/bookentrydate"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_marginTop="10dp" style="@style/whitetext"
			android:layout_below="@id/bookentryauthors" />

		<Button android:id="@+id/bookentryaddbutton"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_marginTop="25dp" android:text="Add book"
			style="@style/blacktext" android:layout_below="@id/bookentrydate"
			android:visibility="invisible" />
	</RelativeLayout>
</ScrollView>
