<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/book_bgrnd_largeheader_textarea">

	<TextView android:id="@+id/bookentrytitle"
		android:layout_width="fill_parent" android:layout_height="80dp"
		android:layout_marginTop="20dp" android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:gravity="center_horizontal" style="@style/subtitle"
		android:lines="3" android:ellipsize="marquee" />

	<ImageView android:id="@+id/bookentrycover"
		android:layout_width="fill_parent" android:layout_height="140dp"
		android:layout_marginTop="5dp" android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp" android:layout_below="@id/bookentrytitle"
		android:gravity="center_vertical" />

	<TextView android:id="@+id/bookentryauthors"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="10dp" android:layout_below="@id/bookentrycover"
		android:gravity="center_horizontal" style="@style/black" />

	<Button android:id="@+id/bookentryaddbutton"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="25dp" android:layout_below="@id/bookentryauthors"
		android:text="Add book" android:gravity="center_vertical" style="@style/black" />
</RelativeLayout>

