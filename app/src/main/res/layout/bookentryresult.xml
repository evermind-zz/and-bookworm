<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/bookentrytitle"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
			android:gravity="center_horizontal" style="@style/subtitletext" />
		<ImageView android:id="@+id/bookentrycover"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="10dp" android:layout_below="@id/bookentrytitle"
			android:gravity="center_horizontal" />
		<TextView android:id="@+id/bookentryauthors"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="10dp" android:layout_below="@id/bookentrycover"
			android:gravity="center_horizontal" style="@style/whitetext" />

		<Button android:id="@+id/bookentryaddbutton"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="25dp" android:layout_below="@id/bookentryauthors" 
			android:text="Add book" android:gravity="center_horizontal" style="@style/blacktext"
			android:visibility="invisible" />
	</RelativeLayout>
</ScrollView>
