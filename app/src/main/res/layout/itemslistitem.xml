<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="6dp" android:background="@drawable/bgrnd_bar2">
	<ImageView android:id="@+id/itemslistitemimage"
		android:layout_width="55dp" android:layout_height="70dp"
		android:minWidth="55dp" android:minHeight="70dp"
		android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
		android:layout_marginRight="10dp" android:background="@drawable/border1" />
	<TextView android:id="@+id/itemslistitemtextabove"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/itemslistitemimage"
		android:layout_alignParentBottom="true" 
		android:lines="2" android:ellipsize="marquee"
		style="@style/white" />
	<TextView android:id="@+id/itemslistitemtextbelow"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/itemslistitemimage"
		android:layout_below="@id/itemslistitemtextabove"
		android:layout_alignParentBottom="true" 
		android:lines="1" android:ellipsize="marquee"
		style="@style/whitesmall" />
</RelativeLayout>

