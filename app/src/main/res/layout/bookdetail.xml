<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:id="@+id/bookcover" android:layout_width="120dp"
		android:layout_height="120dp" android:gravity="left"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:layout_marginTop="20dp" android:src="@drawable/books24" />
	<TextView android:id="@+id/booktitle" android:layout_width="wrap_content"
		android:layout_height="80dp" android:layout_marginTop="5dp"
		android:layout_below="@id/bookcover" android:gravity="center_horizontal"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp" style="@style/subtitletext" />
	<TextView android:id="@+id/bookauthors" android:layout_width="wrap_content"
		android:layout_height="80dp" android:layout_marginTop="5dp"
		android:layout_below="@id/booktitle" android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp" android:layout_marginBottom="20dp"
		style="@style/blacktext" />
</RelativeLayout>
