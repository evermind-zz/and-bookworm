<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingTop="10dp"
	android:paddingBottom="20dp" android:background="@drawable/book_bgrnd_noheader_textarea">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/bookimportlabel"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			style="@style/subsubtitledkred" android:gravity="center_horizontal"
			android:text="@string/labelImportCSV" />

		<TextView android:id="@+id/bookimportexplain"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			style="@style/black" android:gravity="center_horizontal"
			android:text="@string/msgImportCSVInstructions" />

		<Button android:id="@+id/bookimportparsebutton"
			android:layout_width="120dp" android:layout_height="wrap_content"
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:layout_marginLeft="1dp" android:layout_marginRight="8dp"
			android:layout_gravity="center" style="@style/black" android:text="@string/btnParse" />

		<TextView android:id="@+id/bookimportmetadata"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			style="@style/blackmed" android:gravity="left" android:text="" />

		<TextView android:id="@+id/bookimportdata"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			style="@style/blacksmall" android:gravity="left" android:text="" />

		<Button android:id="@+id/bookimportbutton"
			android:layout_width="120dp" android:layout_height="wrap_content"
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:layout_marginLeft="1dp" android:layout_marginRight="8dp"
			android:layout_gravity="center" style="@style/black" android:text="@string/btnImport" />

	</LinearLayout>
</ScrollView>
