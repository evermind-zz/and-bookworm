<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/splash_bgrnd">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/helptitle" android:layout_width="fill_parent"
			android:gravity="center_horizontal" android:layout_height="wrap_content"
			android:layout_marginTop="25px" android:layout_marginBottom="10px"
			android:text="@string/app_name" style="@style/titletext" />
		<ImageView android:id="@+id/helplogo" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:gravity="center_horizontal" android:layout_marginLeft="10px"
			android:layout_marginTop="10px" android:layout_below="@id/helptitle"
			android:src="@drawable/books24" />
		<TextView android:id="@+id/helpby" android:layout_width="fill_parent"
			android:gravity="center_horizontal" android:layout_height="wrap_content"
			android:layout_marginTop="10px" android:text="@string/by" style="@style/blacktextbold"
			android:layout_toRightOf="@id/helplogo" android:layout_below="@id/helptitle" />
		<TextView android:id="@+id/helpcontent" android:layout_width="fill_parent"
			android:gravity="center_horizontal" android:layout_height="wrap_content"
			android:layout_marginTop="10px" android:text="@string/help" style="@style/blacktext"
			android:layout_below="@id/helplogo" />
	</RelativeLayout>
</ScrollView>
