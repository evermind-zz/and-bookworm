<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:id="@+id/blurb" android:layout_width="fill_parent"
			android:gravity="center_horizontal" android:layout_height="wrap_content"
			android:layout_marginTop="25px" android:layout_marginBottom="10px"
			android:text="@string/app_name" style="@style/titletext" />
		<ImageView android:id="@+id/logo" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:gravity="center_horizontal" android:layout_marginLeft="10px"
			android:layout_marginTop="10px" android:layout_below="@id/blurb"
			android:src="@drawable/books48" />
		<TextView android:id="@+id/by" android:layout_width="fill_parent"
			android:gravity="center_horizontal" android:layout_height="wrap_content"
			android:layout_marginTop="10px" android:text="@string/by" style="@style/text"
			android:layout_toRightOf="@id/logo" android:layout_below="@id/blurb" />
		<TextView android:id="@+id/help" android:layout_width="fill_parent"
			android:gravity="center_horizontal" android:layout_height="wrap_content"
			android:layout_marginTop="10px" android:text="@string/help" style="@style/text"
			android:layout_below="@id/logo" />
		<Button android:id="@+id/button_tomain" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center_horizontal"
			android:layout_marginTop="10px" android:layout_marginBottom="10px"
			android:layout_below="@id/help" android:text="Back to Main" />
	</RelativeLayout>
</ScrollView>
