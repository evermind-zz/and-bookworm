<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button android:id="@+id/importdbbutton"
		android:layout_width="200dp" android:layout_height="wrap_content"
		android:layout_marginTop="40dp" android:layout_gravity="center_horizontal"
		android:text="Import DB" style="@style/black" />

	<Button android:id="@+id/exportdbbutton"
		android:layout_width="200dp" android:layout_height="wrap_content"
		android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"
		android:text="Export DB" style="@style/black" />

</LinearLayout>
