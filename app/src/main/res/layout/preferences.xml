<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="Application Preferences">
       <CheckBoxPreference 
        android:title="Enable splash screen?" 
        android:summary="By default Splash is shown only once after install, enable here to show at each start."
        android:key="showsplash" 
        android:defaultValue="false"/>        
        <CheckBoxPreference 
        android:title="Enable debug logging?" 
        android:summary="Enable and then exit/restart app to get detailed logs."
        android:key="debugenabled" 
        android:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Book Data Provider Preferences">
        <ListPreference
           android:title="Book Data Provider"
           android:summary="Currently only Google Books (future additions planned)."
           android:key="dataproviderpref"
           android:defaultValue="com.totsp.bookworm.data.GoogleBookDataSource"
           android:entries="@array/bookdataprovidernames"
           android:entryValues="@array/bookdataproviderkeys" />   
         <ListPreference
           android:title="Book Cover Image Provider"
           android:summary="Currently only OpenLibrary (future additions planned)."
           android:key="coverimageproviderpref"
           android:defaultValue="2"
           android:entries="@array/bookcoverimageprovidernames"
           android:entryValues="@array/bookcoverimageproviderkeys" />                
    </PreferenceCategory>

</PreferenceScreen>